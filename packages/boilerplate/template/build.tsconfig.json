{
  "include": ["src/**/*.ts"],
  "exclude": ["templates/**/*"],
  "strict": true,
  "experimentalDecorators": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "noEmit": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "*": ["./node_modules/*"],
      "@shared/*": ["./src/shared/*"]
    }
  }
}
