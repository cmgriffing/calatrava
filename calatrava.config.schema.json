{
  "$id": "https://raw.githubusercontent.com/cmgriffing/calatrava/main/calatrava.config.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Calatrava Configuration",
  "description": "The configuration needed to run the Calatrava framework and its libraries.",
  "required": [
    "appName",
    "arcBaseDirectory",
    "arcRoutesDirectory",
    "arcTablesDirectory",
    "arcTableIndexesDirectory",
    "arcPreferencesTemplatePath",
    "awsConfigPath",
    "hasWebSocketSupport",
    "envVarsListPath",
    "requestTypesPath",
    "requestSchemaPath",
    "responseTypesPath",
    "responseSchemaPath",
    "openApiSchemaPath"
  ],
  "type": "object",
  "unevaluatedProperties": false,
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "appName": {
      "type": "string"
    },
    "arcBaseDirectory": {
      "type": "string"
    },
    "arcRoutesDirectory": {
      "type": "string"
    },
    "arcTablesDirectory": {
      "type": "string"
    },
    "arcTableIndexesDirectory": {
      "type": "string"
    },
    "awsConfigPath": {
      "type": "string"
    },
    "hasWebSocketSupport": {
      "type": "boolean"
    },
    "arcPreferencesTemplatePath": {
      "type": "string"
    },
    "envVarsListPath": {
      "type": "string"
    },
    "requestTypesPath": {
      "type": "string"
    },
    "requestSchemaPath": {
      "type": "string"
    },
    "responseTypesPath": {
      "type": "string"
    },
    "responseSchemaPath": {
      "type": "string"
    },
    "openApiSchemaPath": {
      "type": "string"
    }
  }
