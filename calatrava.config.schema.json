{
  "$id": "https://raw.githubusercontent.com/cmgriffing/calatrava/main/calatrava.config.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Calatrava Configuration",
  "description": "The configuration needed to run the Calatrava framework and its libraries.",
  "required": [
    "appName",
    "httpRoutesDirectory",
    "awsConfigPath",
    "hasWebSocketSupport",
    "envVarsListPath",
    "arc",
    "scaffolding"
  ],
  "type": "object",
  "unevaluatedProperties": false,
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "appName": {
      "type": "string"
    },
    "arc": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "baseDirectory",
        "routesDirectory",
        "tablesDirectory",
        "tableIndexesDirectory",
        "preferencesTemplatePath"
      ],
      "properties": {
        "baseDirectory": {
          "type": "string"
        },
        "routesDirectory": {
          "type": "string"
        },
        "tablesDirectory": {
          "type": "string"
        },
        "tableIndexesDirectory": {
          "type": "string"
        },
        "preferencesTemplatePath": {
          "type": "string"
        }
      }
    },
    "scaffolding": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "requestTypesPath",
        "requestSchemaPath",
        "responseTypesPath",
        "responseSchemaPath",
        "openApiSchemaPath"
      ],
      "properties": {
        "requestTypesPath": {
          "type": "string"
        },
        "requestSchemaPath": {
          "type": "string"
        },
        "responseTypesPath": {
          "type": "string"
        },
        "responseSchemaPath": {
          "type": "string"
        },
        "openApiSchemaPath": {
          "type": "string"
        }
      }
    },
    "awsConfigPath": {
      "type": "string"
    },
    "hasWebSocketSupport": {
      "type": "boolean"
    },
    "httpRoutesDirectory": {
      "type": "string"
    },
    "envVarsListPath": {
      "type": "string"
    }
  }
}
