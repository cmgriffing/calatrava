{
  "$id": "https://raw.githubusercontent.com/cmgriffing/calatrava/main/calatrava.config.schema.json",
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Calatrava Configuration",
  "description": "The configuration needed to run the Calatrava framework and its libraries.",
  "required": ["appName"],
  "type": "object",
  "properties": {
    "appName": {
      "type": "string"
    },
    "arcBaseDirectory": {
      "type": "string"
    },
    "arcRoutesDirectory": {
      "type": "string"
    },
    "arcTablesDirectory": {
      "type": "string"
    },
    "arcTableIndexesDirectory": {
      "type": "string"
    },
    "awsConfigPath": {
      "type": "string"
    },
    "hasWebSocketSupport": {
      "type": "boolean"
    },
    "arcPreferencesTemplatePath": {
      "type": "string"
    },
    "envVarsListPath": {
      "type": "string"
    }
  }
}
